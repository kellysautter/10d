!IFNDEF Z_ENV
!IFDEF  KZT
Z_ENV = $(KZT)
!ELSE
Z_ENV = w
!ENDIF
!ENDIF

!IFNDEF Z_TOOLDIR
Z_TOOLDIR = tz
!ENDIF

!IFNDEF Z_BASE
Z_BASE   = ..\..\..
Z_BASE_A = $(Z_BASE)\a\$(Z_TOOLDIR)
Z_BASE_ENV = $(Z_BASE)\$(Z_ENV)\$(Z_TOOLDIR)
!ENDIF

Z_LIB        = $(Z_BASE)\$(Z_ENV)\lib
Z_LIB_SUFFIX = z
Z_BIN        = $(Z_BASE)\$(Z_ENV)\bin
Z_SRC        = $(Z_BASE_A)
Z_INC        = $(Z_BASE)\a\inc
Z_INC_ENV    = $(Z_BASE)\$(Z_ENV)\inc

!if "$(DEBUG)" == "1"
Z_OBJ = $(Z_BASE_ENV)\debug
!else
Z_OBJ = $(Z_BASE_ENV)\nodbg
!ENDIF

# =============================================================
# Set compile options
# =============================================================

CL_OPT = /c /ZI /Zp1 /nologo /W3 /WX- /sdl /Oy- /Gm /EHsc /RTC1 /GS /Gd /fp:precise /Zc:wchar_t /Zc:forScope /Zc:inline \
  /Oy- /MDd /FR".\Debug\tzedvmld.sbr" /TP /Gy /Zc:wchar_t /ZI /Gm- /Od /Fd".\Debug\" /fp:precise /nologo /Fo".\Debug\" /Fp".\Debug\tzedvmld.pch" \
  /D "WIN32" /D "__WIN32__" /D "_WINDOWS" /D "_USRDLL" /D "_AFXEXT" /D "_AFXDLL" /D "_DEBUG" /D "QUINSOFT" /D "_USE_DATASET_" /D "_NOANCHOR" /D "_VC80_UPGRADE=0x0600" /D "TZAPDMAA_EXPORTS" /D "_WINDLL" \
  /Fd"Debug\vc140.pdb" /analyze- /errorReport:prompt


