 /DLL /MACHINE:X86 /INCREMENTAL /SUBSYSTEM:WINDOWS \
 /MANIFESTUAC:"level='asInvoker' uiAccess='false'" /ERRORREPORT:PROMPT /NOLOGO /TLBID:1
# tzvmlip.lib tzweb.lib ZDrApp.lib ZdCtl.lib TzCtl.lib \
